<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:background="@color/white">

    <!-- Header -->
    <TextView
            android:id="@+id/payment_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Subscribe Now"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

    <!-- Subscription Details -->
    <TextView
            android:id="@+id/payment_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/payment_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Unlock all premium features by subscribing!"
            android:textSize="16sp"
            android:textColor="@color/gray" />

    <!-- Subscribe Button -->
    <Button
            android:id="@+id/subscribe_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/payment_description"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:text="Subscribe for â‚¹299/month"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@color/primary" />
</RelativeLayout>
